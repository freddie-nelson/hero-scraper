{
    "compilerOptions": {
        "module": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "rootDir": ".",
        "baseUrl": ".",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "newLine": "LF",
        "types": ["node"],
        "declaration": true,
        "declarationDir": "./dist"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
